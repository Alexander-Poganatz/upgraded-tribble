@{
    Layout = ViewData[Utils.LAYOUT]?.ToString();
    ViewData["title"] = "Delete Transaction";
}
@model string
<article>
    <header>
        <h3>Delete?</h3>
    </header>
    <section>
        @using (Html.BeginForm(FormMethod.Post, new { @id="mainform"}))
        {
            <p>Are you sure you want to delete @Model?</p>
            <label><input type="radio" name="yesno" value="Yes" required/><span class="checkable">Yes</span></label>
            <label><input type="radio" name="yesno" value="No" checked/><span class="checkable">No</span></label>
        }
    </section>
    <footer>
        <input type="submit" form="mainform" />
    </footer>
</article>

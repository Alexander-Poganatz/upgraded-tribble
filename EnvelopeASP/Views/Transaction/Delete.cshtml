@{
    Layout = "_Layout";
    ViewData["title"] = "Delete Transaction";
}
@model Transaction
<h1>Delete?</h1>
<form method="post">
    <p>Are you sure you want to delete @Model.Amount - @Model.Date.ToString("yyyy-MM-dd") - @Model.Note?</p>
    <input type="hidden" asp-for="Date" />
    <input type="hidden" asp-for="Amount" />
    <input type="hidden" asp-for="Note" />
    <label><input type="radio" name="yesno" value="Yes" /><span class="checkable">Yes</span></label>
    <label><input type="radio" name="yesno" value="No" /><span class="checkable">No</span></label>
    <input type="submit" />
</form>
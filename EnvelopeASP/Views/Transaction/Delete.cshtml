@{
    Layout = "_Layout";
    ViewData["title"] = "Delete Transaction";
}
@model Transaction
<form method="post" class="pure-form">
    <p>Are you sure you want to delete @Model.Amount - @Model.Date.ToString("yyyy-MM-dd") - @Model.Note?</p>
    <input type="hidden" asp-for="Date" />
    <input type="hidden" asp-for="Amount" />
    <input type="hidden" asp-for="Note" />
    <input type="radio" name="yesno" value="Yes" /><label for="Yes">Yes</label>
    <input type="radio" name="yesno" value="No" /><label for="No">No</label>
    <input type="submit" class="pure-button"/>
</form>
@{
    ViewData["Title"] = "Password Reset";
}
@model Models.SignUp
<div>
    <h1>Password Reset</h1>
    <form method="post">
        <label asp-for="Email">Current Password</label>
        <input type="password" asp-for="Email" required />
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" required />
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" required />
        <input type="submit" />
    </form>
    <p>@ViewBag.Error</p>
</div>